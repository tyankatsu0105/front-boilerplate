
{
	"port": "",
	"connectPhp": false,
	"watch": [
		"./**/*.html",
		"./**/*.php"
	],
	"src": {
		"scss": "src/scss/**/*.scss",
		"js": "src/js",
		"img": [
			"src/img/**/*.jpg",
			"src/img/**/*.png",
			"src/img/**/*.gif",
			"src/img/**/*.svg"
		]
	},
	"dest": {
		"scss": "dest/css/",
		"js": "dest/js/",
		"img": "dest/img/"
	},
	"prettier": {
		"scss": [
			"src/scss/**/*.scss",
			"!src/scss/vendor/**",
			"!dest/**/*.css"
		]
	}
}